package com.example.demo.dao;

import java.util.List;

import org.apache.ibatis.annotations.Mapper;
import org.springframework.stereotype.Repository;

import com.example.demo.dto.TodoDTO;

@Mapper //mapper와 연동해서 사용하기 위해
@Repository
public interface TodoDAO {
   public List<TodoDTO> getTodoList() throws Exception; //getTodoList 이름으로 mapper에서 찾아올거라서 class 따로 필요없음
   public int insertTodoList(TodoDTO dto) throws Exception; //실제 insert할 때는 TodoDTO dto 말고, todoname만 받아오면됨 이렇게 안받아와도 됨
}